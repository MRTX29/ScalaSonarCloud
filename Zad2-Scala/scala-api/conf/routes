# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Custom routes for EBiznes project

# Products Controller
GET     /products       controllers.ProductsController.showAllProducts
GET     /products/:id   controllers.ProductsController.getProductById(id: Int)
POST    /products       controllers.ProductsController.addProduct()
PUT     /products/:id   controllers.ProductsController.updateProduct(id: Int)
DELETE  /products/:id   controllers.ProductsController.removeProduct(id: Int)

# Category Controller
GET     /categories       controllers.CategoryController.showAllCategories
GET     /categories/:id   controllers.CategoryController.getCategoryById(id: Int)
POST    /categories       controllers.CategoryController.addCategory()
PUT     /categories/:id   controllers.CategoryController.updateCategory(id: Int)
DELETE  /categories/:id   controllers.CategoryController.removeCategory(id: Int)

# Cart Controller
POST    /order            controllers.CartController.addToCart()
DELETE  /order/:id        controllers.CartController.removeFromCart(id: Int)